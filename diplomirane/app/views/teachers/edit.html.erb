<h1>Промяна на учител</h1>

<script type="text/javascript">
$(function() {
  $(".datepicker").datepicker({
    format:'dd/mm/yyyy',
    autoclose: false,
    multidate: true,
    multidateSeparator: ","
  });
});
</script>

<%= form_for(@teacher) do |f| %>
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
    <%= f.label :user_name, "Акаунт" %><br>
    <%= f.text_field :user_name %>
  </div>
	<div class="field">
    <%= f.label :name, "Име" %><br>
    <%= f.text_field :name %>
  </div>
	<div class="field">
    <%= f.label :diploma_supervisor, "Дипломен ръководител" %><br>
    <%= f.check_box :diploma_supervisor %>
  </div>
	<div class="field">
    <%= f.label :reviewer, "Рецензент" %><br>
    <%= f.check_box :reviewer %>
  </div>	
	<div class="field">
    <%= f.label :commissioner, "Член на комисия" %><br>
    <%= f.check_box :commissioner %>
  </div>
  <% if @teacher.commissioner %>
    <div class="mydate">
      Дни в които мога да бъда член на комисия:<br/>
      <input id="teacher_commissioner_dates" name="teacher[commissioner_dates]" type="text" class="datepicker" data-format="dd-MM-yyyy" value="<%= @teacher.commissioner_dates %>"  readonly placeholder="Select .." />
    </div>
  <% end %>
	<% if !@current_user.admin? %>
		<div class="field">
		  <%= f.label :old_password, "Стара парола" %>
		  <%= f.password_field :old_password %>
		</div>
	<% end %>
  <div class="field">
    <%= f.label :password, "Нова Парола" %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Потвърждение' %>
    <%= f.password_field :password_confirmation %>
  </div>
	<div class="field">
    <%= f.label :business, "Работа" %><br>
    <%= f.text_area :business %>
	</div>
		<div class="field">
    <%= f.label :access, "Ниво на достъп" %><br>
    <%= f.select(:access, ["user","admin"]) %>
	</div>
  <div class="field">
    <%= f.label :active, "Активен" %><br>
    <%= f.select(:active, ["true","false"]) %>
  </div>
  <div class="actions">
    <%= f.submit "Запази промените" %>
  </div>
<% end %>

<%= link_to 'Покажи', @teacher %> |
<%= link_to 'Назад', teachers_path %>
