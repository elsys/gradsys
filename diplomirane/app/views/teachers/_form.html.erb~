<%= form_for(@teacher) do |f| %>
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="field">
    <%= f.label :file %><br>
    <%= f.file_field :file %>
  </div>
	<div class="field">
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %>
  </div>
	<div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
	<div class="field">
    <%= f.label :diploma_supervisor %><br>
    <%= f.check_box :diploma_supervisor %>
  </div>
	<div class="field">
    <%= f.label :reviewer %><br>
    <%= f.check_box :reviewer %>
  </div>	
	<div class="field">
    <%= f.label :commissioner %><br>
    <%= f.check_box :commissioner %>
  </div>
  <div class="field">
    <%= f.label :password, "New password" %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Confirm' %>
    <%= f.password_field :password_confirmation %>
  </div>
	<div class="field">
    <%= f.label :business %><br>
    <%= f.text_area :business %>
	</div>
		<div class="field">
    <%= f.label :access %><br>
    <%= f.select(:access, ["user","admin"]) %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
