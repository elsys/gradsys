<h1>Разглеждане на учители</h1>

<table>
  <thead>
    <tr>
			<th>Име</th>
			<th>Работа</th>	
			<% if @current_user.admin? %>		
				<th>Акаунт</th>
				<th>ID</th>
			<% end %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
				<td><%= teacher.name %></td>
				<td><%= teacher.business %></td>		
				<% if @current_user.admin? %>		
					<td><%= teacher.user_name %></td>
          <td><%= teacher.id %></td>
				<% end %>
        <td><%= link_to 'Покажи', teacher %></td>
        <td><%= link_to 'Промени', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Унищожи', teacher, method: :delete, data: { confirm: 'Сигурни ли сте?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

