<h1>Разглеждане на дипломни работи</h1>


<table>
  <thead>
    <tr>
      <th>Заглавие</th>
      <th>Описание</th>
      <th>Дипломен ръководител</th>
      <th>Уговорена</th>
      <th>Удобрена</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @diploma_works.sort_by {|d| d.covenanted ? 1 : 0}.each do |diploma_work| %>
      <tr>
        <td><%= diploma_work.title %></td>
        <td><%= diploma_work.description %></td>
        <td><% if t = Teacher.find_by_id(diploma_work.diploma_supervisor_id) %>
							<%= t.name  %>
						<% end %>
				</td>
        <td><%= diploma_work.covenanted %></td>
        <td><%= diploma_work.approved %></td>
        <td><%= link_to 'Покажи', diploma_work %></td>
        <td><%= link_to 'Промени', edit_diploma_work_path(diploma_work) %></td>
        <td><%= link_to 'Унищожи', diploma_work, method: :delete, data: { confirm: 'Сигурни ли сте?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нова Дипломна работа', new_diploma_work_path %>
