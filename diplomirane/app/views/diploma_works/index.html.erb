<h1>Разглеждане на дипломни работи</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Заглавие</th>
      <th>Описание</th>
      <th>Дипломен ръководител</th>
      <th>Уговорена</th>
      <th>Удобрена</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @diploma_works.sort_by {|d| d.approved ? 1 : 0}.each do |diploma_work| %>
      <tr>
        <td><%= link_to diploma_work.title, diploma_work %></td>
        <td><%= diploma_work.description %></td>
        <td><% if t = Teacher.find_by_id(diploma_work.diploma_supervisor_id) %>
							<%= t.name  %>
						<% end %>
				</td>
        <td><%= diploma_work.covenanted %></td>
        <td><%= diploma_work.approved %></td>
        <td><%= link_to 'Промени', edit_diploma_work_path(diploma_work), data: {no_turbolink: true}, class: "btn btn-default"  %></td>
        <td><%= link_to 'Унищожи', diploma_work, method: :delete, data: { confirm: 'Сигурни ли сте?' }, class: "btn btn-default" %></td>
        <td><% if !diploma_work.approved%>
              <%= button_to 'Одобри', approve_diploma_work_path({id: diploma_work.id}), id: "diploma_work_#{diploma_work.id}" %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нова Дипломна работа', new_diploma_work_path, class: "btn btn-default" %>
