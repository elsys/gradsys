<%= javascript_include_tag "colorbox" %>
<div id="diploma_works">
  <h3>Дипломни работи</h3>
  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @committee.diploma_works.each do |d| %>
      <tr id="<%= d.id %>">
        <td><%= link_to d.title, d %></td>
        <td><%= button_to 'Премахни', committees_remove_diploma_work_path({committee_id: @committee.id, diploma_work_id: d.id}), remote: true %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><a class='inline' href="#inline_content">Добавяне на дипломна работа</a></p>

  <div style='display:none'>
    <div id='inline_content' style='padding:10px; background:#fff;'>
      <p><h2>Добаване на дипломна работа</h2></p>
      <p><strong>Изберете:</strong></p>
      <%= form_tag(committees_add_diploma_work_path, remote: true) do %>
        <%= hidden_field_tag "committee", @committee.id %>
        <p><%= select_tag "diploma_work",  options_for_select(DiplomaWork.where(committee_id: nil).where(approved: true).collect{ |d| [d.title, d.id] }), prompt: "Изберете" %></p>  
        <p><%= submit_tag "Добави" %></p>
      <% end %>  
    </div>
  </div>
</div>    