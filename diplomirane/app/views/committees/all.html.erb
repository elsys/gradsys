<h1>Всички комисии</h1>

<table class="table">
  <thead>
    <tr>
      <th>Ден</th>
      <th>Членове</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.date %></td>
        <td><%= committee.commissioners.map(&:name)%></td>
        <td><%= link_to 'Покажи', committee , class: "btn btn-default"%></td>
        <td><%= link_to 'Промени', edit_committee_path(committee), data: {no_turbolink: true}, class: "btn btn-default" %></td>
        <td><%= link_to 'Унищожи', committee, method: :delete, data: { confirm: 'Сигурни ли сте?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
