<%= javascript_include_tag "colorbox.js" %>
<div id="add_other_commissioner_<%=@committee.id%>">
  <% if @committee.commissioners.size < 5 %>
    <p><a class='inline' href="#committee_<%=@committee.id%>">Добавяне на друг член на комисия</a></p>  
    <div style='display:none'>
      <div id='committee_<%=@committee.id%>' style='padding:10px; background:#fff;'>
        <p><h2>Добаване на член на комисия</h2></p>
        <p><strong>Име:</strong></p>
        
        <%= form_tag(add_commissioner_path, remote: true) do %>
          <%= hidden_field_tag "committee_id", @committee.id %>
          <p><%= select_tag "commissioner_id",  options_for_select(Teacher.where(:commissioner => true).collect {|p| [ p.name, p.id ]}), prompt: "Изберете" %></p>  
          <p><%= submit_tag "Добави" %></p>
        <% end %>  
      </div>
    </div>
  <% end %>
</div>