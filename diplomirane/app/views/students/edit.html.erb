<h1>Editing student</h1>

<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
		<div class="field">
    <%= f.label :name,"Име" %><br>
    <%= f.text_field :name %>
  </div>
	<div class="field">
    <%= f.label :user_name,"Акаунт" %><br>
    <%= f.text_field :user_name %>
  </div>
	<% if !@current_user.admin? %>
		<div class="field">
		  <%= f.label :old_password %>
		  <%= f.password_field :old_password %>
		</div>
	<% end %>
   <div class="field">
    <%= f.label :grades, "Оценки" %><br>
    <%= f.select(:grades, ["2","2.52","3","3.5","4","4.5","5","5.5","6"]) %>
	</div>
  <div class="field">
    <%= f.label :password, "Нова парола" %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Потвърди' %>
    <%= f.password_field :password_confirmation %>
  </div>
	<div class="field">
    <%= f.label :number, "Номер" %><br>
    <%= f.text_area :number %>
	<div class="field">
    <%= f.label :grade %><br>
    <%= f.select(:grade, ["","12а","12б","12в","12г"]) %>
	</div>
  <%= f.label :diploma_work_id, "Дипломна работа" %><br>
    <%= f.select(:diploma_work_id, DiplomaWork.all.collect {|p| [ p.title, p.id ]}, {include_blank: 'Няма (Избери)'}) %>
	<div class="field">
    <%= f.label :first,"Първо желание" %><br>
    <%= f.select(:first, DiplomaWork.all.collect {|p| [ p.title, p.id ]}, {include_blank: 'Няма (Избери)'}) %>
  </div>
		<div class="field">
    <%= f.label :second, "Второ желание" %><br>
    <%= f.select(:second, DiplomaWork.all.collect {|p| [ p.title, p.id ]}, {include_blank: 'Няма (Избери)'}) %>
        </div>
		<div class="field">
    <%= f.label :third, "Трето желание" %><br>
    <%= f.select(:third, DiplomaWork.all.collect {|p| [ p.title, p.id ]}, {include_blank: 'Няма (Избери)'}) %>
        </div>
	<div class="field">
    <%= f.label :access, "Ниво на достъп" %><br>
    <%= f.select(:access, ["user","admin"]) %>
	</div>
  <div class="field">
    <%= f.label :active, "Статус" %><br>
    <%= f.select(:active, [["Активен","true"],["Неактивен" ,"false"]]) %>
  </div>
</select>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


