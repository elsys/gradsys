    <%= f.label :diploma_work_id, "third" %><br>
    <%= f.select(:third, DiplomaWork.all.collect {|p| [ p.title, p.id ]}, {include_blank: 'None(Chose)'}) %>
        </div>
	<div class="field">
    <%= f.label :access %><br>
    <%= f.select(:access, ["user","admin"]) %>
	</div>
  <div class="field">
    <%= f.label :active %><br>
    <%= f.select(:active, ["true","false"]) %>
  </div>
</select>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


