<h1>Списък с тагове</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Име</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.name, tag, class: "btn btn-default" %></td>
        <td><%= link_to 'Промени', edit_tag_path(tag), class: "btn btn-default" %></td>
        <td><%= link_to 'Унищожи', tag, method: :delete, data: { confirm: 'Сигурни ли сте?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нов таг', new_tag_path, class: "btn btn-default" %>
